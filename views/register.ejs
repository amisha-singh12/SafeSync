<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.css" rel="stylesheet" />
   <script>
  tailwind = {config: {darkMode: 'media'}}
</script>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-white dark:bg-gray-800 text-gray-900 dark:text-white h-screen w-screen flex items-center justify-center">
    
<form action="/user/register"
method="post"
class="w-96">
    <div class="grid gap-6 mb-6 md:grid-cols-2">
        <div>
            <label for="username" class="block mb-2.5 text-sm font-medium text-heading">username</label>
            <input type="text" id="username"class="block w-full px-3 py-2.5 text-sm rounded-lg border bg-white text-gray-900 border-gray-300 dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:ring-blue-500 focus:border-blue-500"
              placeholder="username" name="username" required />
        </div>
    </div>
    <div class="mb-6">
        <label for="email" class="block mb-2.5 text-sm font-medium text-heading">Email address</label>
        <input type="email" id="email" class= "block w-full px-3 py-2.5 text-sm rounded-lg border bg-white text-gray-900 border-gray-300 dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:ring-blue-500 focus:border-blue-500"
        placeholder="john.doe@company.com" name="email" required />
    </div> 
    <div class="mb-6">
        <label for="password" class="block mb-2.5 text-sm font-medium text-heading">Password</label>
        <input type="password" id="password" class="block w-full px-3 py-2.5 text-sm rounded-lg border bg-white text-gray-900 border-gray-300 dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:ring-blue-500 focus:border-blue-500"
         placeholder="•••••••••" name="password" required />
    </div> 
    <button type="submit"
       class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5">Submit</button>

</form>



    <script src="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.js"></script>
  </body>
</html>